@model ProjetoAlugar.Models.Conta

@{
    ViewData["Title"] = "Atualizar Saldo";
}

<div class="row">
    <div class="col-md-4 offset-md-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContaId" />

            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuário</label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Saldo" class="control-label">Saldo</label>
                <input asp-for="Saldo" class="form-control" />
                <span asp-validation-for="Saldo" class="text-danger"></span>
            </div>

            <div class="form-group float-right">
                <input type="submit" value="Salvar" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
